# Server Configuration
MODE_ENV=production
HOST=localhost
PORT=8080
API_VERSION=v1
URL=localhost:${PORT}

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_USER=myuser
MONGODB_PASSWORD=mypassword
MONGODB_DATABASE=mydatabase
MONGODB_POOL_SIZE=10
MONGODB_RETRY_ATTEMPT=3
MONGODB_RETRY_INTERVAL=5
MONGODB_MAX_IDLE=5
MONGODB_POOL_MAX_OPEN=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=mypassword
REDIS_DATABASE=0
REDIS_POOL_SIZE=10
REDIS_RETRY_ATTEMPT=3
REDIS_RETRY_INTERVAL=5
REDIS_POOL_IDLE=5
REDIS_POOL_MAX=20

# CSRF Configuration
CSRF_SECRET=mysecret
CSRF_EXPIRES_IN=3600
CSRF_METHOD=POST
CSRF_HEADER=X-CSRF-Token
CSRF_COOKIE_PATH=/

# JWT Configuration
JWT_SALT=myjwtsecret
JWT_SALT_ROUND=10
JWT_SECRET=myjwtsecret
JWT_EXPIRE=3600
JWT_REFRESH_SECRET=myrefreshsecret
JWT_REFRESH_EXPIRE=86400
JWT_HEADER=Authorization
JWT_COOKIE_PATH=/
JWT_PEEPER=myapp
JWT_ISSUER=myapp
JWT_AUDIANCE=myapp

# Rate Limit Configuration
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX=100
RATE_LIMIT_DELAY=1
RATE_LIMIT_MESSAGE=Too many requests
RATE_LIMIT_CODE=429
